/**index.wxss**/
.info{
  font-size: 20px;
  background-color: #ccc;
  margin: 10px 0;
}
.section{
margin-bottom: 50rpx;
}
.section__title{
  font-size: 20px;
  background-color: gold;
}
.flex-wrp{
  display: flex;
  width: 98%;
  height: 350rpx;
  border: 2px solid #F5F5F5;
}
.flex-item{
  width: 200rpx;
  height: 200rpx;
  color: #ffffff;
  font-size: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bc_green{
 
background-color: #00ff00;
}
.bc_red{
background-color: #ff0000;
}
.bc_blue{
background-color: #0000ff;
}

/*画廊*/
.gallery {
    /*margin-bottom: 100rpx;*/
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    padding:13rpx;
}

/*每张图片所占容器*/
.item {
    position: relative;
    margin-right: 5rpx;
    margin-left: 5rpx;
}

.comment_view{
  /*background-color:#F5F5F5;*/
  margin:0rpx;
}
.comment_block{
  background-color:#F5F5F5;
  margin-left:20rpx;
  margin-right:20rpx;
  margin-top:10rpx;
  margin-bottom:30rpx;
}
.comment_uploader{
  font-style: normal;
  color: #4A708B;
  font-weight: bold;
  margin-left: 20rpx;
  font-size: 32rpx   
}
.comment_time{
  font-style: normal;
  color: #666;
  font-weight: bold;
  font-size: 24rpx;
  padding-right:20rpx;
  padding-left:20rpx;
  padding-bottom:10rpx;
}
.comment_content{
  margin: 0rpx;
  font-family: 微软雅黑;
  font-size: 32rpx
}
.comment_video_block{
  position: relative;
  padding: 20rpx;
}
.comment_video{
  width:100%;
  height:520rpx;
}
.comment_delete{
  float: right;
  font-size: 24rpx;
  font-family: 微软雅黑;
  color: #4A708B;
}
.comment_separate{
  background-color:#F5F5F5;
  height:4rpx;
  margin-bottom:30rpx;
}

.comment_head_block{
  margin-bottom: 100rpx;
}

.comment_head_bg_image {
  margin-bottom: 0rpx;
  width: 750rpx;
  height: 463rpx;
  position: relative;
  z-index: 1;
}

.comment_head_user_info_camera {
  margin-top: -463rpx;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  float: right;
  position: relative;
  z-index: 2;
}

.comment_head_user_info_image {
  margin-top: -120rpx;
  margin-right: 20rpx;
  width: 150rpx;
  height: 150rpx;
  float: right;
  position: relative;
  background-color:#F5F5F5;
  z-index: 2;
  border-style: solid;
  border-color: #F5F5F5;
  border-width: 5rpx;
}

.comment_head_user_info_text{
  margin-top: -70rpx;
  margin-right: 20rpx;
  float: right;
  color:#F5F5F5;
  font-weight: bold;
  font-family: 微软雅黑;
  font-size: 32rpx;
  position: relative;
  z-index: 2;
}

.comment_content_parent{
  padding-top:20rpx;
  padding-right:20rpx;
  padding-left:20rpx;
}

.comment_foot_block{
  margin: 20rpx
}

.comment_foot_block_view{
  text-align:center;
  color:#aaa;
}